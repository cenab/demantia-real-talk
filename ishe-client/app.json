{
  "expo": {
    "name": "Dementia Real Talk",
    "slug": "dementia-real-talk",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/ayshe.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "developmentClient": true,
    "splash": {
      "image": "./assets/ayshe.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "scheme": "dementiarealtalkreactapp",
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need access to your microphone for real-time audio communication.",
        "NSCameraUsageDescription": "We need access to your camera for WebRTC functionality."
      },
      "bundleIdentifier": "com.dementiarealtalkreactapp",
      "associatedDomains": [
        "applinks:3.127.58.246"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/ayshe.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CAMERA"
      ],
      "package": "com.dementiarealtalkreactapp",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "http",
              "host": "3.127.58.246",
              "pathPrefix": "/"
            },
            {
              "scheme": "https",
              "host": "3.127.58.246",
              "pathPrefix": "/"
            },
            {
              "scheme": "dementiarealtalkreactapp",
              "host": "*"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/ayshe.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ],
      "expo-dev-client"
    ],
    "extra": {
      "eas": {
        "projectId": "fab0e87d-6f29-4dc7-9ea0-820efc7408bb"
      }
    }
  }
}
